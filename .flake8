[flake8]
exclude =
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
    # NETCONF southbound interface is deprecated and not used
    srv6_sdn_data_plane/southbound/netconf/*,
    # SSH southbound interface is deprecated and not used
    srv6_sdn_data_plane/southbound/ssh/*,
    # REST southbound interface is deprecated and not used
    srv6_sdn_data_plane/southbound/rest/*,
    # This contains builds of srv6-sdn-data-plane that we don't want to check
    build,
    # This contains builds of srv6-sdn-data-plane that we don't want to check
    dist